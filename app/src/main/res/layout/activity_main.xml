<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pulse_value"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:text="@string/pulse"
            android:textSize="@dimen/text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stop"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/imitator"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="@string/imitator_error"

            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/heat_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/heat_btn_start"
            android:background="@color/blue"

            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/heat_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/heat_btn_stop"
            android:background="@color/red"

            android:textSize="@dimen/text_size" />


        <TextView
            android:id="@+id/damper_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/damper_text"
            android:textSize="28sp" />

        <SeekBar
            android:id="@+id/damperBar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="50dp"
            android:minHeight="55dp"
            android:paddingLeft="40sp"
            android:paddingRight="5sp" />
        <TextView
            android:id="@+id/temp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/temp_text"

            android:textSize="@dimen/text_size" />
        <SeekBar
            android:id="@+id/tempBar"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="20dp"
            android:minHeight="55dp"
            android:paddingLeft="40sp"
            android:paddingRight="5sp" />





    </LinearLayout>
</ScrollView>