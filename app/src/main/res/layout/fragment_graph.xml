<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:context=".GraphFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/graph_VZD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Прогноз ВЗД: " />
    <TextView
        android:id="@+id/graph_VZD2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Остаток: " />
    <Button
        android:id="@+id/VSD_reset"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:background="@color/blue"
        android:text="Сброс ВЗД"
        android:textSize="20sp" /></LinearLayout>
    <TextView
        android:id="@+id/graph_textView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Пневмотахограмма" />
    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"  />

    <TextView
        android:id="@+id/graph_textView02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Спирограмма" />

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph_2"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

</LinearLayout>